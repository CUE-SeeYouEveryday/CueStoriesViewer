{
    "Txt_Name": "Event_004_07",
    "Dialogue": [
        {
            "index": 1,
            "heroineId": [
                7
            ],
            "name": "恵庭あいり",
            "message": "（吹雪の中、行き倒れている女性……。\nこの女性のやり取りで、兄弟の美しい心が描かれるシーン。）",
            "voice": "event/Event_004/Event_004_07/event_004_07_001.mp3"
        },
        {
            "index": 2,
            "heroineId": [
                7
            ],
            "name": "恵庭あいり",
            "message": "『兄弟は激しい吹雪の中、教会へ続く森の中を歩いていきました。\nすると道端に、1人の女性が倒れているではありませんか』",
            "voice": "event/Event_004/Event_004_07/event_004_07_002.mp3"
        },
        {
            "index": 3,
            "heroineId": [
                6
            ],
            "name": "赤川千紗",
            "message": "『く、苦しい……』",
            "voice": "event/Event_004/Event_004_07/event_004_07_003.mp3"
        },
        {
            "index": 4,
            "heroineId": [
                8
            ],
            "name": "九条柚葉",
            "message": "『どうしました？』",
            "voice": "event/Event_004/Event_004_07/event_004_07_004.mp3"
        },
        {
            "index": 5,
            "heroineId": [
                6
            ],
            "name": "赤川千紗",
            "message": "『実は病気で苦しくて、吹雪の中、前に進めなくなっているの』",
            "voice": "event/Event_004/Event_004_07/event_004_07_005.mp3"
        },
        {
            "index": 6,
            "heroineId": [
                8
            ],
            "name": "九条柚葉",
            "message": "『それはいけない。\nわたしがおぶって家まで送って差し上げましょう』",
            "voice": "event/Event_004/Event_004_07/event_004_07_006.mp3"
        },
        {
            "index": 7,
            "heroineId": [
                5
            ],
            "name": "天童悠希",
            "message": "『お兄ちゃん、教会へは行かないのかい？』",
            "voice": "event/Event_004/Event_004_07/event_004_07_007.mp3"
        },
        {
            "index": 8,
            "heroineId": [
                8
            ],
            "name": "九条柚葉",
            "message": "『教会には行きたいが、困ってる人を見過ごすわけにはいかない。\nお前1人で教会へおゆき。さあアントニオ、この銀貨を持って！』",
            "voice": "event/Event_004/Event_004_07/event_004_07_008.mp3"
        },
        {
            "index": 9,
            "heroineId": [
                5
            ],
            "name": "天童悠希",
            "message": "『わかったよ！\nじゃあ、行ってきます』",
            "voice": "event/Event_004/Event_004_07/event_004_07_009.mp3"
        },
        {
            "index": 10,
            "heroineId": [
                7
            ],
            "name": "恵庭あいり",
            "message": "（な、何？\n客席がまたざわついてる……。）",
            "voice": "event/Event_004/Event_004_07/event_004_07_010.mp3"
        },
        {
            "index": 11,
            "heroineId": [
                0
            ],
            "name": "子どもたち",
            "message": "……アントニオのやつ、冷たくね？",
            "voice": ""
        },
        {
            "index": 12,
            "heroineId": [
                0
            ],
            "name": "子どもたち",
            "message": "女の人、家に送ってから教会に行けばいいじゃん。",
            "voice": ""
        },
        {
            "index": 13,
            "heroineId": [
                5
            ],
            "name": "天童悠希",
            "message": "（……確かになぁ。）",
            "voice": "event/Event_004/Event_004_07/event_004_07_013.mp3"
        },
        {
            "index": 14,
            "heroineId": [
                7
            ],
            "name": "恵庭あいり",
            "message": "（あれ？\n悠希ちゃんの目の色が変わった。）",
            "voice": "event/Event_004/Event_004_07/event_004_07_014.mp3"
        },
        {
            "index": 15,
            "heroineId": [
                5
            ],
            "name": "天童悠希",
            "message": "『ただいまー』",
            "voice": "event/Event_004/Event_004_07/event_004_07_015.mp3"
        },
        {
            "index": 16,
            "heroineId": [
                8
            ],
            "name": "九条柚葉",
            "message": "『どうしたアントニオ。\n教会へ向かったはずじゃ……』",
            "voice": "event/Event_004/Event_004_07/event_004_07_016.mp3"
        },
        {
            "index": 17,
            "heroineId": [
                5
            ],
            "name": "天童悠希",
            "message": "『なんか、二の足を踏んだんだ。\nお兄ちゃんも、教会へ連れて行くべきかなって思って』",
            "voice": "event/Event_004/Event_004_07/event_004_07_017.mp3"
        },
        {
            "index": 18,
            "heroineId": [
                7
            ],
            "name": "恵庭あいり",
            "message": "（ま、まずいよぉ。）",
            "voice": "event/Event_004/Event_004_07/event_004_07_018.mp3"
        },
        {
            "index": 19,
            "heroineId": [
                7
            ],
            "name": "恵庭あいり",
            "message": "『お兄ちゃんは、そんな優しいアントニオの背中を押して、\n再び教会へと向かわせました』",
            "voice": "event/Event_004/Event_004_07/event_004_07_019.mp3"
        },
        {
            "index": 20,
            "heroineId": [
                5
            ],
            "name": "天童悠希",
            "message": "『背中を押すなよお兄ちゃん、\n僕も一緒に、その女の人を連れて行くよ』",
            "voice": "event/Event_004/Event_004_07/event_004_07_020.mp3"
        },
        {
            "index": 21,
            "heroineId": [
                7
            ],
            "name": "恵庭あいり",
            "message": "『なんてアントニオは優しいんでしょう！\nですが、お兄ちゃんは力づくでアントニオを教会へ向かわせます』",
            "voice": "event/Event_004/Event_004_07/event_004_07_021.mp3"
        },
        {
            "index": 22,
            "heroineId": [
                5
            ],
            "name": "天童悠希",
            "message": "『力づくは嫌だよ。2人で抱えた方が早いだろう？　\nな？　そうしよう』",
            "voice": "event/Event_004/Event_004_07/event_004_07_022.mp3"
        },
        {
            "index": 23,
            "heroineId": [
                8
            ],
            "name": "九条柚葉",
            "message": "『お兄ちゃんは、一向にかまわないが……、\nナレーションの人がどう思うかだよね』",
            "voice": "event/Event_004/Event_004_07/event_004_07_023.mp3"
        },
        {
            "index": 24,
            "heroineId": [
                5
            ],
            "name": "天童悠希",
            "message": "『ナレーションの人！\nどう思うんだい？』",
            "voice": "event/Event_004/Event_004_07/event_004_07_024.mp3"
        },
        {
            "index": 25,
            "heroineId": [
                7
            ],
            "name": "恵庭あいり",
            "message": "話を……、元に戻してほしいと思います！",
            "voice": "event/Event_004/Event_004_07/event_004_07_025.mp3"
        },
        {
            "index": 26,
            "heroineId": [
                7
            ],
            "name": "恵庭あいり",
            "message": "（あぁー、笑われちゃったよぉ。）",
            "voice": "event/Event_004/Event_004_07/event_004_07_026.mp3"
        },
        {
            "index": 27,
            "heroineId": [
                6
            ],
            "name": "赤川千紗",
            "message": "『と、とにかく……。\nアントニオ君は、1人で教会に行った方がいいんじゃないかな？』",
            "voice": "event/Event_004/Event_004_07/event_004_07_027.mp3"
        },
        {
            "index": 28,
            "heroineId": [
                7
            ],
            "name": "恵庭あいり",
            "message": "（ありがとう千紗ちゃん！）",
            "voice": "event/Event_004/Event_004_07/event_004_07_028.mp3"
        },
        {
            "index": 29,
            "heroineId": [
                5
            ],
            "name": "天童悠希",
            "message": "『いやとにかく、このおばちゃんを送ってから行くことにするよ。\nさあ、行こう！』",
            "voice": "event/Event_004/Event_004_07/event_004_07_029.mp3"
        },
        {
            "index": 30,
            "heroineId": [
                6
            ],
            "name": "赤川千紗",
            "message": "『おばちゃんってちょっと、心外だわ。お姉さんでしょ』",
            "voice": "event/Event_004/Event_004_07/event_004_07_030.mp3"
        },
        {
            "index": 31,
            "heroineId": [
                7
            ],
            "name": "恵庭あいり",
            "message": "（千紗ちゃん、そんなとこ、こだわるところじゃないよぉ。）",
            "voice": "event/Event_004/Event_004_07/event_004_07_031.mp3"
        },
        {
            "index": 32,
            "heroineId": [
                6
            ],
            "name": "赤川千紗",
            "message": "『お姉さん家、遠いのよ。\n教会のパーティー終わっちゃうよ』",
            "voice": "event/Event_004/Event_004_07/event_004_07_032.mp3"
        },
        {
            "index": 33,
            "heroineId": [
                5
            ],
            "name": "天童悠希",
            "message": "『え！？　それは困ったなぁ。\nでも、自分の欲を叶えるために行動していいんだろうか？』",
            "voice": "event/Event_004/Event_004_07/event_004_07_033.mp3"
        },
        {
            "index": 34,
            "heroineId": [
                7
            ],
            "name": "恵庭あいり",
            "message": "（余計な葛藤しないで。\nアントニオは純粋であればいいんだから。）",
            "voice": "event/Event_004/Event_004_07/event_004_07_034.mp3"
        },
        {
            "index": 35,
            "heroineId": [
                8
            ],
            "name": "九条柚葉",
            "message": "『おともだちのみんなに聞いてみたらどうかな？』",
            "voice": "event/Event_004/Event_004_07/event_004_07_035.mp3"
        },
        {
            "index": 36,
            "heroineId": [
                5
            ],
            "name": "天童悠希",
            "message": "『おともだちのみんなって？』",
            "voice": "event/Event_004/Event_004_07/event_004_07_036.mp3"
        },
        {
            "index": 37,
            "heroineId": [
                8
            ],
            "name": "九条柚葉",
            "message": "『目の前にいるだろ？』",
            "voice": "event/Event_004/Event_004_07/event_004_07_037.mp3"
        },
        {
            "index": 38,
            "heroineId": [
                5
            ],
            "name": "天童悠希",
            "message": "『なるほどそうか。おともだちのみんなー！\n僕はこのおばちゃんを送ったほうがいいと思う？』",
            "voice": "event/Event_004/Event_004_07/event_004_07_038.mp3"
        },
        {
            "index": 39,
            "heroineId": [
                7
            ],
            "name": "恵庭あいり",
            "message": "し、知らない人には、ついていっちゃダメだよねぇ？",
            "voice": "event/Event_004/Event_004_07/event_004_07_039.mp3"
        },
        {
            "index": 40,
            "heroineId": [
                0
            ],
            "name": "子どもたち",
            "message": "……。",
            "voice": ""
        },
        {
            "index": 41,
            "heroineId": [
                7
            ],
            "name": "恵庭あいり",
            "message": "（ん？　客席の空気が変わった……。）",
            "voice": "event/Event_004/Event_004_07/event_004_07_041.mp3"
        },
        {
            "index": 42,
            "heroineId": [
                0
            ],
            "name": "子どもたち",
            "message": "……いかのおすしだ。",
            "voice": ""
        },
        {
            "index": 43,
            "heroineId": [
                5
            ],
            "name": "天童悠希",
            "message": "へ？　お寿司？",
            "voice": "event/Event_004/Event_004_07/event_004_07_043.mp3"
        },
        {
            "index": 44,
            "heroineId": [
                0
            ],
            "name": "子どもたち",
            "message": "「イカ」行かない、「ノ」乗らない、「オ」大声を出して、\n「ス」すぐ逃げて、「シ」知らせる。",
            "voice": ""
        },
        {
            "index": 45,
            "heroineId": [
                0
            ],
            "name": "子どもたち",
            "message": "そうだー！　いかのおすし！",
            "voice": ""
        },
        {
            "index": 46,
            "heroineId": [
                5
            ],
            "name": "天童悠希",
            "message": "（さっきと話が違うなぁ……。）",
            "voice": "event/Event_004/Event_004_07/event_004_07_046.mp3"
        },
        {
            "index": 47,
            "heroineId": [
                5
            ],
            "name": "天童悠希",
            "message": "『よし、お兄ちゃん。いかのおすしだ。\n僕は教会に行くことにするよ』",
            "voice": "event/Event_004/Event_004_07/event_004_07_047.mp3"
        },
        {
            "index": 48,
            "heroineId": [
                8
            ],
            "name": "九条柚葉",
            "message": "『そうかアントニオ。お兄ちゃんもこの知らないおばちゃんには、\n十分警戒して、任務を遂行するよ』",
            "voice": "event/Event_004/Event_004_07/event_004_07_048.mp3"
        },
        {
            "index": 49,
            "heroineId": [
                6
            ],
            "name": "赤川千紗",
            "message": "『なんだか、申し訳ないわね。\nあと、しつこいようだけど、お姉さんだから』",
            "voice": "event/Event_004/Event_004_07/event_004_07_049.mp3"
        },
        {
            "index": 50,
            "heroineId": [
                0
            ],
            "name": "子どもたち",
            "message": "お兄ちゃんも、行っちゃダメー！",
            "voice": ""
        },
        {
            "index": 51,
            "heroineId": [
                0
            ],
            "name": "子どもたち",
            "message": "知らない人は危険だよぉ。",
            "voice": ""
        },
        {
            "index": 52,
            "heroineId": [
                0
            ],
            "name": "子どもたち",
            "message": "そうだ、そうだー！",
            "voice": ""
        },
        {
            "index": 53,
            "heroineId": [
                7
            ],
            "name": "恵庭あいり",
            "message": "（そんなぁ……、前にも後ろにも行けなくなちゃったよ。\nどうすればいいんだろう？）",
            "voice": "event/Event_004/Event_004_07/event_004_07_053.mp3"
        }
    ]
}