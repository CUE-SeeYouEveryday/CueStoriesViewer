{
    "Txt_Name": "Event_004_08",
    "Dialogue": [
        {
            "index": 1,
            "heroineId": [
                7
            ],
            "name": "恵庭あいり",
            "message": "（お兄ちゃんが女の人を助けないと、物語が成立しないし……。）",
            "voice": "event/event_004/Event_004_08/event_004_08_001.mp3"
        },
        {
            "index": 2,
            "heroineId": [
                7
            ],
            "name": "恵庭あいり",
            "message": "（なんとか、弟のアントニオだけを、教会に行かせないと……。）",
            "voice": "event/event_004/Event_004_08/event_004_08_002.mp3"
        },
        {
            "index": 3,
            "heroineId": [
                7
            ],
            "name": "恵庭あいり",
            "message": "（ん？　だれかのスマホが鳴ってる。）",
            "voice": "event/event_004/Event_004_08/event_004_08_003.mp3"
        },
        {
            "index": 4,
            "heroineId": [
                8
            ],
            "name": "九条柚葉",
            "message": "アイリ、アイリ。",
            "voice": "event/event_004/Event_004_08/event_004_08_004.mp3"
        },
        {
            "index": 5,
            "heroineId": [
                7
            ],
            "name": "恵庭あいり",
            "message": "なに？",
            "voice": "event/event_004/Event_004_08/event_004_08_005.mp3"
        },
        {
            "index": 6,
            "heroineId": [
                8
            ],
            "name": "九条柚葉",
            "message": "Sorry，私の電話。",
            "voice": "event/event_004/Event_004_08/event_004_08_006.mp3"
        },
        {
            "index": 7,
            "heroineId": [
                8
            ],
            "name": "九条柚葉",
            "message": "緊急だと思うの。",
            "voice": "event/event_004/Event_004_08/event_004_08_007.mp3"
        },
        {
            "index": 8,
            "heroineId": [
                7
            ],
            "name": "恵庭あいり",
            "message": "じゃあ……、仕方ないかぁ。",
            "voice": "event/event_004/Event_004_08/event_004_08_008.mp3"
        },
        {
            "index": 9,
            "heroineId": [
                6
            ],
            "name": "赤川千紗",
            "message": "こらっ、仕方ないわけないでしょっ。",
            "voice": "event/event_004/Event_004_08/event_004_08_009.mp3"
        },
        {
            "index": 10,
            "heroineId": [
                8
            ],
            "name": "九条柚葉",
            "message": "『アントニオ。\nお兄ちゃんに提案がある』",
            "voice": "event/event_004/Event_004_08/event_004_08_010.mp3"
        },
        {
            "index": 11,
            "heroineId": [
                5
            ],
            "name": "天童悠希",
            "message": "『なんだい？』",
            "voice": "event/event_004/Event_004_08/event_004_08_011.mp3"
        },
        {
            "index": 12,
            "heroineId": [
                8
            ],
            "name": "九条柚葉",
            "message": "『ここで祈ろう。\nそして鐘を鳴らしてハッピーエンドだ』",
            "voice": "event/event_004/Event_004_08/event_004_08_012.mp3"
        },
        {
            "index": 13,
            "heroineId": [
                6
            ],
            "name": "赤川千紗",
            "message": "雑！\n終わらせ方、雑よ！",
            "voice": "event/event_004/Event_004_08/event_004_08_013.mp3"
        },
        {
            "index": 14,
            "heroineId": [
                5
            ],
            "name": "天童悠希",
            "message": "『お兄ちゃん、3人で一緒に教会に行かないか？』",
            "voice": "event/event_004/Event_004_08/event_004_08_014.mp3"
        },
        {
            "index": 15,
            "heroineId": [
                7
            ],
            "name": "恵庭あいり",
            "message": "（……え？　どういうこと？）",
            "voice": "event/event_004/Event_004_08/event_004_08_015.mp3"
        },
        {
            "index": 16,
            "heroineId": [
                5
            ],
            "name": "天童悠希",
            "message": "『そうすればお兄ちゃんもパーティーに参加できるし』",
            "voice": "event/event_004/Event_004_08/event_004_08_016.mp3"
        },
        {
            "index": 17,
            "heroineId": [
                5
            ],
            "name": "天童悠希",
            "message": "『教会には大人がたくさんいるから、\nそのおばちゃんだって悪さはできない』",
            "voice": "event/event_004/Event_004_08/event_004_08_017.mp3"
        },
        {
            "index": 18,
            "heroineId": [
                0
            ],
            "name": "子どもたち",
            "message": "そうだ！　そうだ！　いいぞー！",
            "voice": ""
        },
        {
            "index": 19,
            "heroineId": [
                6
            ],
            "name": "赤川千紗",
            "message": "『お姉ちゃん、悪い人じゃないんだけど！』",
            "voice": "event/event_004/Event_004_08/event_004_08_019.mp3"
        },
        {
            "index": 20,
            "heroineId": [
                5
            ],
            "name": "天童悠希",
            "message": "『悪者はみんなそう言うんだ』",
            "voice": "event/event_004/Event_004_08/event_004_08_020.mp3"
        },
        {
            "index": 21,
            "heroineId": [
                8
            ],
            "name": "九条柚葉",
            "message": "『とりあえず、今は無理ってメールしとく』",
            "voice": "event/event_004/Event_004_08/event_004_08_021.mp3"
        },
        {
            "index": 22,
            "heroineId": [
                5
            ],
            "name": "天童悠希",
            "message": "『なんだって？』",
            "voice": "event/event_004/Event_004_08/event_004_08_022.mp3"
        },
        {
            "index": 23,
            "heroineId": [
                8
            ],
            "name": "九条柚葉",
            "message": "『お兄ちゃんも、教会のパーティーに行くことにするよ』",
            "voice": "event/event_004/Event_004_08/event_004_08_023.mp3"
        },
        {
            "index": 24,
            "heroineId": [
                6
            ],
            "name": "赤川千紗",
            "message": "『わたし、病気で苦しいんだけど……』",
            "voice": "event/event_004/Event_004_08/event_004_08_024.mp3"
        },
        {
            "index": 25,
            "heroineId": [
                8
            ],
            "name": "九条柚葉",
            "message": "『2人でおぶっていくよ』",
            "voice": "event/event_004/Event_004_08/event_004_08_025.mp3"
        },
        {
            "index": 26,
            "heroineId": [
                5
            ],
            "name": "天童悠希",
            "message": "『僕たちは今までずっと、力を合わせて2人きりでやってきたんだ。\nこれからもずっとそうさ！』",
            "voice": "event/event_004/Event_004_08/event_004_08_026.mp3"
        },
        {
            "index": 27,
            "heroineId": [
                7
            ],
            "name": "恵庭あいり",
            "message": "（どうしよう……、物語がぐちゃぐちゃになってく……。\nせっかくあんなにナレーションの特訓したのにぃ。）",
            "voice": "event/event_004/Event_004_08/event_004_08_027.mp3"
        },
        {
            "index": 28,
            "heroineId": [
                6
            ],
            "name": "赤川千紗",
            "message": "あいり……、あいり……！\n大丈夫だよ。このままいこう。",
            "voice": "event/event_004/Event_004_08/event_004_08_028.mp3"
        },
        {
            "index": 29,
            "heroineId": [
                7
            ],
            "name": "恵庭あいり",
            "message": "千紗ちゃん……。でもどうやって？",
            "voice": "event/event_004/Event_004_08/event_004_08_029.mp3"
        },
        {
            "index": 30,
            "heroineId": [
                6
            ],
            "name": "赤川千紗",
            "message": "あいりはナレーションなんだから。神の声なんだから。",
            "voice": "event/event_004/Event_004_08/event_004_08_030.mp3"
        },
        {
            "index": 31,
            "heroineId": [
                6
            ],
            "name": "赤川千紗",
            "message": "あいりが言った言葉には逆らえない。",
            "voice": "event/event_004/Event_004_08/event_004_08_031.mp3"
        },
        {
            "index": 32,
            "heroineId": [
                7
            ],
            "name": "恵庭あいり",
            "message": "ずっと逆らわれてるけど。",
            "voice": "event/event_004/Event_004_08/event_004_08_032.mp3"
        },
        {
            "index": 33,
            "heroineId": [
                6
            ],
            "name": "赤川千紗",
            "message": "大丈夫、きっとうまくいくはず……！\nこのまま進むわよ。",
            "voice": "event/event_004/Event_004_08/event_004_08_033.mp3"
        },
        {
            "index": 34,
            "heroineId": [
                7
            ],
            "name": "恵庭あいり",
            "message": "う、うん……。",
            "voice": "event/event_004/Event_004_08/event_004_08_034.mp3"
        }
    ]
}