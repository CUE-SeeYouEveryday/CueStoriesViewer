{
    "Txt_Name": "Event_004_04",
    "Dialogue": [
        {
            "index": 1,
            "heroineId": [
                6
            ],
            "name": "赤川千紗",
            "message": "コホン……。\nでは、早速始めましょう。「クリスマスの鐘」。",
            "voice": "event/event_004/Event_004_04/event_004_04_001.mp3"
        },
        {
            "index": 2,
            "heroineId": [
                7
            ],
            "name": "恵庭あいり",
            "message": "『むかしむかしあるところに、仲の良い兄弟が暮らしていました』",
            "voice": "event/event_004/Event_004_04/event_004_04_002.mp3"
        },
        {
            "index": 3,
            "heroineId": [
                7
            ],
            "name": "恵庭あいり",
            "message": "『弟のアントニオは、教会のクリスマスパーティーに行くのが夢でした』",
            "voice": "event/event_004/Event_004_04/event_004_04_003.mp3"
        },
        {
            "index": 4,
            "heroineId": [
                5
            ],
            "name": "天童悠希",
            "message": "『お兄ちゃん。教会のクリスマスパーティーって、\nとっても賑やかなんだろうね……』",
            "voice": "event/event_004/Event_004_04/event_004_04_004.mp3"
        },
        {
            "index": 5,
            "heroineId": [
                5
            ],
            "name": "天童悠希",
            "message": "『でも僕たちにはお金がないから、行けないよね……。\n僕たちなんか、どうせダメだよね』",
            "voice": "event/event_004/Event_004_04/event_004_04_005.mp3"
        },
        {
            "index": 6,
            "heroineId": [
                7
            ],
            "name": "恵庭あいり",
            "message": "（悠希ちゃん、漫才がスベって落ち込みすぎだよ……。\nアントニオは明るいキャラクターなのに……。）",
            "voice": "event/event_004/Event_004_04/event_004_04_006.mp3"
        },
        {
            "index": 7,
            "heroineId": [
                8
            ],
            "name": "九条柚葉",
            "message": "『ほらアントニオ、銀貨をやるから、行っておいで！』",
            "voice": "event/event_004/Event_004_04/event_004_04_007.mp3"
        },
        {
            "index": 8,
            "heroineId": [
                5
            ],
            "name": "天童悠希",
            "message": "『でもお兄ちゃん、この銀貨は、明日のパンを買うお金……』",
            "voice": "event/event_004/Event_004_04/event_004_04_008.mp3"
        },
        {
            "index": 9,
            "heroineId": [
                8
            ],
            "name": "九条柚葉",
            "message": "『大丈夫だよ！　だって明日はクリスマスだもの！\n派手にいこうぜぇ！』",
            "voice": "event/event_004/Event_004_04/event_004_04_009.mp3"
        },
        {
            "index": 10,
            "heroineId": [
                7
            ],
            "name": "恵庭あいり",
            "message": "（柚葉ちゃん、お兄ちゃんのキャラ、明るすぎ！）",
            "voice": "event/event_004/Event_004_04/event_004_04_010.mp3"
        },
        {
            "index": 11,
            "heroineId": [
                7
            ],
            "name": "恵庭あいり",
            "message": "（それにしても児童館の子たち……、\n何で無反応なんだろう……。）",
            "voice": "event/event_004/Event_004_04/event_004_04_011.mp3"
        },
        {
            "index": 12,
            "heroineId": [
                7
            ],
            "name": "恵庭あいり",
            "message": "（そういえば……、マネージャーさんが言ってたっけ……。）",
            "voice": "event/event_004/Event_004_04/event_004_04_012.mp3"
        },
        {
            "index": 13,
            "heroineId": [
                7
            ],
            "name": "恵庭あいり",
            "message": "（うん。お客さんが硬いのは仕方ない。集中しないと……。）",
            "voice": "event/event_004/Event_004_04/event_004_04_013.mp3"
        },
        {
            "index": 14,
            "heroineId": [
                7
            ],
            "name": "恵庭あいり",
            "message": "『その町の中心には、天高くそびえる教会がありました』",
            "voice": "event/event_004/Event_004_04/event_004_04_014.mp3"
        },
        {
            "index": 15,
            "heroineId": [
                7
            ],
            "name": "恵庭あいり",
            "message": "『そしてその教会の鐘には、\n「クリスマスの夜にしか鳴らない」という言い伝えがありました』",
            "voice": "event/event_004/Event_004_04/event_004_04_015.mp3"
        },
        {
            "index": 16,
            "heroineId": [
                7
            ],
            "name": "恵庭あいり",
            "message": "（山を描くようなイントネーション。鼻濁音に気をつけて。\n助詞は伸ばさず、語尾下げる……。）",
            "voice": "event/event_004/Event_004_04/event_004_04_016.mp3"
        },
        {
            "index": 17,
            "heroineId": [
                7
            ],
            "name": "恵庭あいり",
            "message": "『その鐘の音を聞けば、貧しい人も、富める人も、\n誰もが等しく幸せになれる……』",
            "voice": "event/event_004/Event_004_04/event_004_04_017.mp3"
        },
        {
            "index": 18,
            "heroineId": [
                7
            ],
            "name": "恵庭あいり",
            "message": "（常に1行先を見て、終わりに向かって、よくねばる……。）",
            "voice": "event/event_004/Event_004_04/event_004_04_018.mp3"
        },
        {
            "index": 19,
            "heroineId": [
                7
            ],
            "name": "恵庭あいり",
            "message": "『しかしここ何十年も、その鐘の音を耳にした人はいません』",
            "voice": "event/event_004/Event_004_04/event_004_04_019.mp3"
        },
        {
            "index": 20,
            "heroineId": [
                7
            ],
            "name": "恵庭あいり",
            "message": "（よしっ！　練習通りできてるぞ……。）",
            "voice": "event/event_004/Event_004_04/event_004_04_020.mp3"
        },
        {
            "index": 21,
            "heroineId": [
                7
            ],
            "name": "恵庭あいり",
            "message": "（お客さんは静かだけど、きっと集中して聞いてくれてるんだよね。\nいい調子……。）",
            "voice": "event/event_004/Event_004_04/event_004_04_021.mp3"
        },
        {
            "index": 22,
            "heroineId": [
                6
            ],
            "name": "赤川千紗",
            "message": "……。",
            "voice": "event/event_004/Event_004_04/event_004_04_000.mp3"
        },
        {
            "index": 23,
            "heroineId": [
                7
            ],
            "name": "恵庭あいり",
            "message": "（あれ？　千紗ちゃん、セリフだよ？）",
            "voice": "event/event_004/Event_004_04/event_004_04_023.mp3"
        },
        {
            "index": 24,
            "heroineId": [
                6
            ],
            "name": "赤川千紗",
            "message": "……。",
            "voice": "event/event_004/Event_004_04/event_004_04_000.mp3"
        },
        {
            "index": 25,
            "heroineId": [
                7
            ],
            "name": "恵庭あいり",
            "message": "（千紗ちゃん！　長老ジョセフのセリフだよ！）",
            "voice": "event/event_004/Event_004_04/event_004_04_025.mp3"
        },
        {
            "index": 26,
            "heroineId": [
                6
            ],
            "name": "赤川千紗",
            "message": "……。",
            "voice": "event/event_004/Event_004_04/event_004_04_000.mp3"
        },
        {
            "index": 27,
            "heroineId": [
                7
            ],
            "name": "恵庭あいり",
            "message": "（気付いた……？　早くセリフ言って……！）",
            "voice": "event/event_004/Event_004_04/event_004_04_027.mp3"
        },
        {
            "index": 28,
            "heroineId": [
                6
            ],
            "name": "赤川千紗",
            "message": "……。",
            "voice": "event/event_004/Event_004_04/event_004_04_000.mp3"
        }
    ]
}